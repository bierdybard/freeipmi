%define name libfreeipmi
%define version @PACKAGE_VERSION@
%define release 0.alpha5.qa3

Name: %{name}
Version: %{version}
Release: %{release}
License: GPL
Group: Application/Misc
Source: %{name}-%{version}.tar.gz
BuildRoot: /var/tmp/%{name}-%{version}

Summary: FreeIPMI is an IPMI library.

%description
FreeIPMI is an IPMI library.

%prep
%setup -q

%build
./autogen.sh
%configure --program-prefix=%{?_program_prefix:%{_program_prefix}} --enable-rpm-install
make

%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT
%makeinstall

%preun
if [ "$1" = 0 ]; then
    if [ -x /var/lib/libfreeipmi ]; then
        rm -rf /var/lib/libfreeipmi
    fi
fi

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc AUTHORS ChangeLog COPYING INSTALL NEWS README THANKS TODO
/usr/lib
/usr/include
/usr/share
/var

%changelog
